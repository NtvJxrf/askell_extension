{
  "manifest_version": 3,
  "name": "Askell extension",
  "version": "1.0.0",
  "description": "Расширение для MoySklad",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://online.moysklad.ru/*",
    "https://calc.askell.ru/*",
    "https://*.google.com/*"
  ],
  "side_panel": {
    "default_path": "src/popup/popup.html",
    "enabled": true
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting", "windows"]
}
